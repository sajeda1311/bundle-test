<section
  id="MainProduct-{{ section.id }}"
  class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}"
  data-section="{{ section.id }}"
>
  {{ 'bundle-kit.css' | asset_url | stylesheet_tag }}
  {{ 'https://unpkg.com/flickity@2/dist/flickity.min.css' | stylesheet_tag }}

  {%- if request.design_mode -%}
    <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
  <div class="page-width">
    <div id="BundleProduct" class="product grid grid--1-col grid--2-col-tablet">
      <div class="grid__item product__media-wrapper">
        <div>
          {% assign product = product %}
          {% assign metafield_value = product.metafields.custom.bundle_qty | plus: 0 %}
          <h1 class="bundle-product-title">{{ product.title | escape }}</h1>
          <p class="bundle-products-list">
            {{ product.metafields.custom.bundle_list.value }}
          </p>
          <div class="bundle-canvas">
            <p class="bundle-canvas-heading">
              Selected Stencils: <span id="LeftCount">0</span> out of {{ product.metafields.custom.bundle_qty.value }}
            </p>
            <p class="bundle-product-price">
              {%- render 'price',
                product: product,
                use_variant: true,
                show_badges: true,
                price_class: 'price--large'
              -%}
            </p>
          </div>
          <div>
            <div id="BundleProductCanvas">
              <div
                id="BundleSelectedStencils"
                class="carousel"
                data-max="5"
                data-flickity='
                  {
                  "cellAlign": "left",
                  "contain": true,
                  "wrapAround": true,
                  "pageDots": false
                  }
                '
              >
                {% for i in (1..metafield_value) %}
                  <div class="bundle-product-wrap">
                    <div id="BundleStencil_{{ i }}" class="empty">
                      <button data-stencil-id="BundleStencil_{{ i }}" class="remove">X</button>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="product__info-wrapper grid__item">
        <div>
          {% assign collections_metafield = product.metafields.custom.bundle_collections | split: ',' %}
          <div class="bundle-product-style-filter">
            <label for="BundleStencilKitFilters">Filter by Style:</label>
            <select id="BundleStencilKitFilters">
              <option selected="" value="all-styles">All</option>
              {% for collection_handle in collections_metafield %}
                {% assign collection = collections[collection_handle] %}
                {% if collection %}
                  <option value="bundle_design_style_{{ collection_handle }}">{{ collection.title }}</option>
                {% endif %}
              {% endfor %}
            </select>
          </div>

          <div id="BundleProductFilters">
            <a href="#" data-selected="all-styles" class="active">All</a>
            {% for collection_handle in collections_metafield %}
              {% assign collection = collections[collection_handle] %}
              {% if collection %}
                <a href="#" data-selected="bundle_design_style_{{ collection_handle }}">{{ collection.title }}</a>
              {% endif %}
            {% endfor %}
          </div>

          <ul id="BundleStencilProductsListings" class="bundle-all-styles">
            {% for collection_handle in collections_metafield %}
              {% assign collection = collections[collection_handle] %}
              {% if collection %}
                {% for product_in_collection in collection.products %}
                  <li
                    data-product-name="{{ product_in_collection.title }}"
                    class="bundle-all-styles bundle_design_style_{{ collection_handle }}"
                  >
                    <span data-product="{{ product_in_collection.title }}" class="bundle-stencil-images bundle-image-rollover">
                      <img
                        src="{{ product_in_collection.images[0].src | product_img_url: '200x200' }}"
                        alt="{{ product_in_collection.images[0].alt }}"
                        class="primary-img"
                        width="auto" height="auto"
                      >
                      <img
                        src="{{ product_in_collection.images[1].src | product_img_url: 'medium' }}"
                        alt="{{ product_in_collection.images[1].alt }}"
                        class="secondary-img"
                        width="auto" height="auto"
                      >
                    </span>
                    <span>{{ product_in_collection.title }}</span>
                  </li>
                {% endfor %}
              {% endif %}
            {% endfor %}
          </ul>
          {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
          {%- form 'product',
            product,
            id: product_form_installment_id,
            class: 'installment caption-large product-form'
          -%}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

            <div id="BundleSelectedStencilsKit"></div>
            <div class="product-form__controls-group product-form__controls-group--submit">
              <div class="bundle-product-btn-wrap product-form__item product-form__item--submit product-form__item--no-variants">
                <div class="product__price">
                  {%- render 'price',
                    product: product,
                    use_variant: true,
                    show_badges: true,
                    price_class: 'price--large'
                  -%}
                </div>
                <button
                  type="submit"
                  name="add"
                  disabled
                  aria-label="Sold out"
                  class=" button button--full-width"
                  data-add-to-cart
                >
                  <span data-add-to-cart-text> Sold out </span>
                </button>
              </div>
            </div>
          {%- endform -%}
        </div>
      </div>
    </div>

    {%- liquid
      if product.selected_or_first_available_variant.featured_media
        assign seo_media = product.selected_or_first_available_variant.featured_media
      else
        assign seo_media = product.featured_media
      endif
    -%}

    <script type="application/ld+json">
      {
        "@context": "http://schema.org/",
        "@type": "Product",
        "name": {{ product.title | json }},
        "url": {{ request.origin | append: product.url | json }},
        {% if seo_media -%}
          "image": [
            {{ seo_media | image_url: width: 1920 | prepend: "https:" | json }}
          ],
        {%- endif %}
        "description": {{ product.description | strip_html | json }},
        {% if product.selected_or_first_available_variant.sku != blank -%}
          "sku": {{ product.selected_or_first_available_variant.sku | json }},
        {%- endif %}
        "brand": {
          "@type": "Brand",
          "name": {{ product.vendor | json }}
        },
        "offers": [
          {%- for variant in product.variants -%}
            {
              "@type" : "Offer",
              {%- if variant.sku != blank -%}
                "sku": {{ variant.sku | json }},
              {%- endif -%}
              {%- if variant.barcode.size == 12 -%}
                "gtin12": {{ variant.barcode }},
              {%- endif -%}
              {%- if variant.barcode.size == 13 -%}
                "gtin13": {{ variant.barcode }},
              {%- endif -%}
              {%- if variant.barcode.size == 14 -%}
                "gtin14": {{ variant.barcode }},
              {%- endif -%}
              "availability" : "http://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}",
              "price" : {{ variant.price | divided_by: 100.00 | json }},
              "priceCurrency" : {{ cart.currency.iso_code | json }},
              "url" : {{ request.origin | append: variant.url | json }}
            }{% unless forloop.last %},{% endunless %}
          {%- endfor -%}
        ]
      }
    </script>
  </div>
</section>

